{% extends 'templates/app.twig' %}

{% block title %}
<title>Suas datas e aniversários | RJAnivers.tk</title>
{% endblock %}

{% block content %}
<div class="container rjanivers">
    
    {% include 'templates/flash.twig' %}

    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <a href="{{ path_for('cadastro-datas') }}" class="btn btn-primary">Adicionar Datas</a>
            <a href="#" class="btn btn-info">Adicionar Grupos</a>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="pull-right">
                <a class="btn btn-info pull-right" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Buscar
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-sm-offset-9 col-sm-3 col-xs-12">
        <div class="collapse" id="collapseExample">
            <form class="form-horizontal" method="POST" action="{{ path_for('home') }}">
                <div class="form-group">
                    <label class="control-label" for="mesAtual">Buscar mês</label>
                    <select class="form-control" name="mesAtual" id="mesAtual">
                        <option value="1"  {{ mesAtual == '1'  ? 'selected' : '' }}>Janeiro</option>
                        <option value="2"  {{ mesAtual == '2'  ? 'selected' : '' }}>Fevereiro</option>
                        <option value="3"  {{ mesAtual == '3'  ? 'selected' : '' }}>Março</option>
                        <option value="4"  {{ mesAtual == '4'  ? 'selected' : '' }}>Abril</option>
                        <option value="5"  {{ mesAtual == '5'  ? 'selected' : '' }}>Maio</option>
                        <option value="6"  {{ mesAtual == '6'  ? 'selected' : '' }}>Junho</option>
                        <option value="7"  {{ mesAtual == '7'  ? 'selected' : '' }}>Julho</option>
                        <option value="8"  {{ mesAtual == '8'  ? 'selected' : '' }}>Agosto</option>
                        <option value="9"  {{ mesAtual == '9'  ? 'selected' : '' }}>Setembro</option>
                        <option value="10" {{ mesAtual == '10' ? 'selected' : '' }}>Outubro</option>
                        <option value="11" {{ mesAtual == '11' ? 'selected' : '' }}>Novembro</option>
                        <option value="12" {{ mesAtual == '12' ? 'selected' : '' }}>Dezembro</option>
                        <option value="13" {{ mesAtual == '13' ? 'selected' : '' }}>Todos</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="idAtual">Buscar grupo</label>
                    <select class="form-control" name="idAtual" id="idAtual">
                        {% for c in calendarios %}
                        <option value="{{ c.id }}" {{ idAtual == c.id ? 'selected' : '' }}>{{ c.nome }}</option>
                        {% endfor %}
                        <option value="0" {{ idAtual == 0 ? 'selected' : '' }}>Todos</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="filtroNome">Buscar nome</label>
                    <input type="text" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block"><i class="fa fa-search"></i> Buscar</button>
                </div>
                {{ csrf.field | raw }}
            </form>
        </div>
    </div>
    

    <div class="row">
        <div class="col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <h3>Datas</h3>
                </div>
                <div class="col-sm-6 col-xs-12">
                    
                </div>
            </div>

            <ul class="list-group">
                {% for d in datas %}
                    {% if d.ocorreu %}
                        <li class="list-group-item {{ d.hoje? 'list-group-item-info' : '' }}">
                            <h4 class="list-group-item-heading">
                            <span class="fa-stack">
                                <i class="fa fa-square-o fa-stack-2x"></i>
                                <i class="fa fa-check fa-stack-1x"></i>
                            </span>
                            {{ d.linha }}
                            
                            </h4>
                            <p class="list-group-item-text">XX anos em xx meses e xx dias...</p>
                        </li>
                    {% else %}
                        <li class="list-group-item {{ d.hoje? 'list-group-item-info' : '' }}">
                            <span class="fa-stack">
                                <i class="fa fa-square-o fa-stack-2x"></i>
                            </span>
                            {{ d.linha }}
                            <span class="badge hidden-xs">
                                Em {{ d.nome }}
                            </span>
                        </li>
                    {% endif %}
                    
                {% else %}
                    <li class="list-group-item">
                        Nenhuma data cadastrada! Comece agora mesmo!
                    </li>
                {% endfor %}

                
            </ul>

            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ordenando por {{ ordem }} &nbsp;&nbsp;<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li class="{{ ordem == 'NOME' ? 'active' : '' }}"><a href="#">Nome</a></li>
                            <li class="{{ ordem == 'DATA' ? 'active' : '' }}"><a href="#">Data</a></li>
                            <li class="{{ ordem == 'IDADE' ? 'active' : '' }}"><a href="#">Idade</a></li>
                        </ul>
                    </div>
                    {% if mostrarSignos == "SIM" %}
                        <a href="#" class="btn btn-info">Mostrar signos</a>
                    {% else %}
                        <a href="#" class="btn btn-info">Ocultar signos</a>
                    {% endif %}
                </div>
                <div class="col-sm-6 col-xs-12">
                    <div class="pull-right">
                        {{ datas.links | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}