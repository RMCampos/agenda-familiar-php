{% extends 'templates/app.twig' %}

{% block title %}
<title>Resetar senha, esqueceu sua senha? | RJAnivers.tk</title>
{% endblock %}

{% block content %}
<div class="container rjanivers">
    <div class="col-md-offset-3 col-md-6">
        <div class="well">
            {% include 'templates/flash.twig' %}
            <!--<p class="text-center">Esqueceu sua senha? Informe seu nome de cadastro e clique em Resetar para começar o processo de reset de senha!</p>-->
            <h4 class="text-center">Resetar senha</h4>
            <hr>
            <form action="{{ path_for('resetar') }}" method="POST" class="form-horizontal">
                <div class="form-group {{ errors.nome ? 'has-error' : '' }}">
                    <div class="col-sm-12">
                        <label class="control-label" for="nome">Nome *
                            <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" title="Informe seu nome" data-content="Informe seu nome e clique em Resetar para iniciar.">
                                <i class="fa fa-question-circle" ></i>
                            </a>
                        </label>
                        <div class="input-group">
                            <input type="text" maxlength="100" id="nome" name="nome" class="form-control" placeholder="Chapolin Colorado" required>
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        </div>
                        {% if errors.nome %}
                        <span class="help-block">{{ errors.nome | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">Resetar</button>
                        <a href="{{ path_for('entrar') }}" class="btn btn-default">Cancelar</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <small>* Campos obrigatórios</small>
                    </div>
                </div>
                {{ csrf.field | raw }}
            </form>
        </div>
    </div>
</div>
{% endblock %}