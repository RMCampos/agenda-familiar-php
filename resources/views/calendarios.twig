{% extends 'templates/app.twig' %}

{% block title %}
<title>Cadastrar calendários, organizar seus grupos | RJAnivers.tk</title>
{% endblock %}

{% block content %}
<div class="container rjanivers">
    {% include 'templates/flash.twig' %}
    <p>Cadastrar calendários</p>
    <form class="form-horizontal" id="form" method="POST" action="{{ path_for('calendarios') }}">
        <div class="form-group">
            <div class="col-sm-2 col-xs-2">
                <label class="control-label" for="id">Id</label>
                <input type="text" id="id" name="id" value="{{ old.id }}" class="form-control" readonly>
            </div>
            <div class="col-sm-10 col-xs-2">
                <label class="control-label" for="nome">Nome *</label>
                <input type="text" id="nome" name="nome" value="{{ old.nome }}" placeholder="Aniversários Familia" class="form-control" required>
                {% if errors.nome %}
                <span class="help-block">{{ errors.nome | first }}</span>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="btn-group btn-group-justified">
                    <div class="btn-group btn-group-lg">
                        <button type="submit" id="btnCadastrar" class="btn btn-success">Cadastrar</button>
                    </div>
                </div>
                <div class="btn-group btn-group-justified">
                    <div class="btn-group btn-group-lg">
                        <button type="submit" id="btnAlterar" class="btn btn-success btnAction hidden">Alterar</button>
                    </div>
                    <div class="btn-group btn-group-lg">
                        <button type="button" id="btnExcluir" class="btn btn-default btnAction hidden">Excluir</button>
                    </div>
                    <div class="btn-group btn-group-lg">
                        <button type="button" id="btnCancelar" class="btn btn-default btnAction hidden">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="methodInput" name="_METHOD" value="PUT">
        {{ csrf.field | raw }}
    </form>

    <div id="divExcluir" class="alert alert-warning hidden" role="alert">
        <p><strong>Anteção!</strong> Tem certeza que deseja excluir? Esta operação não poderá ser desfeita..</p>
        <br>
        <button type="button" id="simExcluir" class="btn btn-danger">Sim, Excluir!</button>
        <button type="button" id="naoCancelar" class="btn btn-default">Cancelar</button>
    </div>

    <hr>

    <p>{{ calendarios|length > 0? 'Clique para selecionar' : 'Cadastre seu primeiro calendário!' }}</p>
    <ul class="list-group">
        {% for c in calendarios %}
        <li class="list-group-item input-pass">
            <span class="name">{{ c.nome }}</span>
            <span class="badge">{{ c.total }}</span>
            <span class="hidden">{{ c.id }}</span>
        </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}